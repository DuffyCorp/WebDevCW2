<html>
    <body>
     <div class="wrapper">

        {{#user}}
            {{>sidebar}}
        {{/user}}
        <!-- Page Content  -->
        <div id="content" style="width 100%" class="{{admin}}">
            {{>header}}

        <div class="Hero">
            <div class="heroText">
                <h1>{{title}}</h1>
            </div>
        </div>
            <div class = "bodyContent" id="menus" style="text-align: center;">
        <h2>Edit a menu</h2>
        {{#items}}
                    <div class="login">
            <div class="AdminForm">
            <form method="post" role="form">
  <!-- Old menu -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example1">Old menu name</label>
    <input type="text" class="form-control" value="{{menuName}}" disabled>
    <input type="hidden" id="oldMenuName" name="oldMenuName" value="{{menuName}}">
  </div>

  <!-- new menu input -->
  <div class="form-outline mb-4">
    <label class="form-label" for="form2Example2">New menu name</label>
    <input type="text" class="form-control" id="newMenuName" name="newMenuName" placeholder="New menu name" required>
  </div>

  <!-- Submit button -->
  <input type="submit" value="Edit menu" class="btn btn-primary">
</form>
        {{/items}}
    </body>
        </div>
        </div>
        </div>
            <footer>
        {{>footer}}
    </footer>
