<html>
    <body>
     <div class="wrapper">

        {{#user}}
            {{>sidebar}}
        {{/user}}
        <!-- Page Content  -->
        <div id="content" style="width 100%" class="{{admin}}">
            {{>header}}

        <div class="Hero">
            <div class="heroText">
                <h1>{{title}}</h1>
            </div>
        </div>
            <div class = "bodyContent" id="menus">
        <h2>Create a new category</h2>
        <form method="post" role="form">
            <div class="form-group">
                <label for="menuName">Choose a menu:</label>
                <select type="text" class="form-control" name="menuName" id="menuName">
                {{#entries}}
                    <option value="{{menuName}}">{{menuName}}</option>
                {{/entries}}
                </select>
            </div>
            <div class="form-group">
                <label for="newCatName">New category name:</label>
                <input type="text" class="form-control" id="newCatName" name="newCatName" placeholder="Category name" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Add category" class="btn btn-primary">
            </div>
        </form>
    </body>
    <footer>
        {{>footer}}
    </footer>
        </div>
       <script src="/js/admin.js"></script>
</html>